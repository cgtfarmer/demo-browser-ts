{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "rootDir": "./app",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./app/*"]
    },
    "resolveJsonModule": true,
    "outDir": "./site/assets/js",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "include": [
    "./app"
  ]
}
